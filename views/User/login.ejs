<!-- views/signup/login.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Sign In</title>
  </head>
  <body>
    <section class="login">
      <div class="log-in-container">
        <div class="logo">
          <img src="https://res.cloudinary.com/dvp3fdavw/image/upload/v1737716047/FMA_logo_jdb3km.png" alt="FMA logo" id="user-logo">
      </div>
      <% if (errorMessages && errorMessages.length > 0) { %>
        <div class="alert alert-danger">
            <% errorMessages.forEach(function (msg) { %>
                <p><%= msg %></p>
            <% }) %>
        </div>
      <% } %>
        <form action="/login" method="POST">
            <!-- Email Input -->
            <div class="mb-3 d-flex align-items-center">
              <label for="email" class="me-2 form-label align-middle" style="margin-bottom: 0;">Email</label>
              <input type="email" name="email" class="form-control" id="email" style="flex: 1;">
            </div>
            <div class="mb-3 d-flex align-items-center">
              <label for="password" class="me-2 form-label align-middle" style="margin-bottom: 0;">Password</label>
              <input type="password" class="form-control" name="password" id="password" style="flex: 1;">
            </div>
            <button type="submit" class="btn btn-danger">Login</button>
          </form>
      </div>
    </section>
  </body>
</html>
