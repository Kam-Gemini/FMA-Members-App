<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/user-style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Register</title>
  </head>
  <body>
    <section class="register">
      <div class="log-in-container">
        <div class="logo">
          <img src="/images/FMA_logo.png" alt="FMA" id="register-logo" />
        </div>
        <% if (errorMessages && errorMessages.length > 0) { %>
          <div class="alert alert-danger">
              <% errorMessages.forEach(function (msg) { %>
                  <p><%= msg %></p>
              <% }) %>
          </div>
        <% } %>
        <form action="/user" method="POST">
          <!-- User Name Input -->
          <div class="mb-3 d-flex align-items-center">
            <label for="username" class="me-2 form-label form-label-custom" style="margin-bottom: 0;">User Name</label>
            <input type="text" name="username" class="form-control" id="username" style="flex: 1;" />
          </div>
          <!-- Email Input -->
          <div class="mb-3 d-flex align-items-center">
            <label for="email" class="me-2 form-label form-label-custom" style="margin-bottom: 0;">Email</label>
            <input type="email" name="email" class="form-control" id="email" style="flex: 1;" />
          </div>
          <!-- Password Input -->
          <div class="mb-3 d-flex align-items-center">
            <label for="password" class="me-2 form-label form-label-custom" style="margin-bottom: 0;">Password</label>
            <input type="password" name="password" class="form-control" id="password" style="flex: 1;" />
          </div>
          <!-- Confirm Password Input -->
          <div class="mb-3 d-flex align-items-center">
            <label for="confirmPassword" class="me-2 form-label form-label-custom" style="margin-bottom: 0;">Confirm Password</label>
            <input type="password" name="confirmPassword" class="form-control" id="confirmPassword" style="flex: 1;" />
          </div>
          <fieldset class="row mb-3">
            <legend class="col-form-label col-sm-2 pt-0">Role</legend>
            <div class="col-sm-10">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="role" id="admin" value="Admin" checked />
                <label class="form-check-label" for="gridRadios1">Admin</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="role" id="end-user" value="End User" />
                <label class="form-check-label" for="gridRadios2">End User</label>
              </div>
            </div>
          </fieldset>
          <button type="submit" class="btn btn-danger">Register Account</button>
        </form>
      </div>
    </section>
  </body>
</html>