<!-- views/profile/new.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/user-style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Create Profile</title>
</head>
<body>
    <section class="new-profile">
        <div class="logo">
            <img src="https://res.cloudinary.com/dvp3fdavw/image/upload/v1737716047/FMA_logo_jdb3km.png" alt="FMA logo" id="profile-logo" />
        </div>
        <% if (errorMessages && errorMessages.length > 0) { %>
            <div class="alert alert-danger">
                <% errorMessages.forEach(function (msg) { %>
                    <p><%= msg %></p>
                <% }) %>
            </div>
        <% } %>
        <form action="/members" method="POST" enctype="multipart/form-data">
            <!-- Name Input -->
            <div class="mb-3 d-flex align-items-center">
                <label for="name" class="me-2 form-label form-label-profile" style="margin-bottom: 0;">User Name</label>
                <input type="text" name="name" class="form-control wider-input" id="name" style="flex: 1;" value="<%=member.name%>"/>
            </div>
            <!-- Email Input -->
            <div class="mb-3 d-flex align-items-center">
                <label for="email" class="me-2 form-label form-label-profile" style="margin-bottom: 0;">Email</label>
                <input type="email" name="email" class="form-control wider-input" id="email" style="flex: 1;" value="<%=member.email%>"/>
            </div>
            <!-- Gender Input -->
            <div class="mb-3 d-flex align-items-center">
                <label for="gender" class="me-2 form-label form-label-profile" style="margin-bottom: 0;">Gender</label>
                <input type="text" name="gender" class="form-control wider-input" id="gender" style="flex: 1;" value="<%=member.gender%>"/>
            </div>
            <!-- DOB Input -->
            <div class="mb-3 d-flex align-items-center">
                <label for="dob" class="me-2 form-label form-label-profile" style="margin-bottom: 0;">DOB</label>
                <input type="text" name="DOB" class="form-control wider-input" id="DOB" style="flex: 1;" value="<%=member.DOB%>"/>
            </div>
            <!-- Weight Input -->
            <div class="mb-3 d-flex align-items-center">
                <label for="weight" class="me-2 form-label form-label-profile" style="margin-bottom: 0;">Weight</label>
                <input type="text" name="weight" class="form-control wider-input" id="weight" style="flex: 1;" value="<%=member.weight%>"/>
            </div>
            <!-- Belt Input -->
            <div class="mb-3 d-flex align-items-center">
                <label for="belt" class="me-2 form-label form-label-profile" style="margin-bottom: 0;">Belt</label>
                <input type="text" name="belt" class="form-control wider-input" id="belt" style="flex: 1;" value="<%=member.belt%>"/>
            </div>
            <!-- Instagram Input -->
            <div class="mb-3 d-flex align-items-center">
                <label for="instagram" class="me-2 form-label form-label-profile" style="margin-bottom: 0;">Instagram</label>
                <input type="text" name="instagram" class="form-control wider-input" id="instagram" style="flex: 1;" value="<%=member.instagram%>"/>
            </div>
            <!-- Facebook Input -->
            <div class="mb-3 d-flex align-items-center">
                <label for="facebook" class="me-2 form-label form-label-profile" style="margin-bottom: 0;">Facebook</label>
                <input type="text" name="facebook" class="form-control wider-input" id="facebook" style="flex: 1;" value="<%=member.facebook%>"/>
            </div>
            <div class="mb-3 d-flex align-items-center">
                <label for="image" class="me-2 form-label form-label-profile" style="margin-bottom: 0;">Profile Image</label>
                <input type="file" name="image" class="form-control wider-input" id="image" accept="image/*" />
            </div>
            <button type="submit" class="btn btn-primary">Create Profile</button>
        </form>
    </section>
</body>
</html>